include variables.pug

mixin table ()
	table&attributes(mergeAttributes({
		cellpadding: 0,
		cellspacing: 0,
		style: fontRoman
	}, attributes))
		block

mixin button()
	- var background = helpers.getValue("background", attributes.style)
	td(style= helpers.getRule('border-radius', attributes.style) + helpers.getRule('background', attributes.style))
		a&attributes(mergeAttributes({
			style: `display: inline-block;border: 1px solid ${background};`
		}, attributes))
			block

mixin spacer()
	- var width = helpers.getValue('width', attributes.style) || attributes.width || basePadding;
	- var height = helpers.getValue('height', attributes.style) || attributes.height || width;

	img.spacer&attributes(mergeAttributes({
			src: placeholderUrl
		}, attributes))

mixin content()
	+table(attributes)
		tr
				td(colspan="3")
					+spacer(width="20px" height="50px")
		tr
			td
				+spacer(width="20px" height="50px")
			td
				block
			td
				+spacer(width="20px" height="50px")
		tr
				td(colspan="3")
					+spacer(width="20px" height="50px")